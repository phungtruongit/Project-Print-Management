@model PrintManagement.ApiIntegration.UserDTO

@{
    ViewData["Title"] = "Người dùng";
}

@section header
{
    Người dùng - Chi tiết người dùng (#@Model.UserName)
}

<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        Tài khoản:  
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserName)
                    </dd>
                    <dt class="col-sm-2">
                        Họ tên: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Điện thoại: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                    <dt class="col-sm-2">
                        Email: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2">
                        Phòng ban:
                    </dt>
                    <dd class="col-sm-10">
                        @ViewData["departmentName"]
                    </dd>
                    <dt class="col-sm-2">
                        Nhóm người dùng: 
                    </dt>
                    <dd class="col-sm-10">
                        @ViewData["usergroupName"]
                    </dd>
                    <dt class="col-sm-2">
                        Số dư: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(@String.Format("{0:n0}", Model.Balance)) VNĐ
                    </dd>
                    <dt class="col-sm-2">
                        Số trang còn lại: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.RemainPages)
                        <br />
                    </dd>
                    <dt class="col-sm-2">
                        Tổng số lượt in: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TotalJobs)
                        <br />
                    </dd>
                    <dt class="col-sm-2">
                        Tổng số trang in: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TotalPages)
                    </dd>
                    <dt class="col-sm-2">
                        Quản trị viên: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsAdmin)
                    </dd>
                    <dt class="col-sm-2">
                        Vô hiệu hoá: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsDisable)
                    </dd>
                    <dt class="col-sm-2">
                        Hạn chế: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsRestricted)
                    </dd>
                    <dt class="col-sm-2">
                        Người tạo: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedBy)
                    </dd>
                    <dt class="col-sm-2">
                        Ngày tạo: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Convert.ToDateTime(Model.CreatedDate).ToString("dd/MM/yyyy"))
                    </dd>
                    <dt class="col-sm-2">
                        Người cập nhật: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ModifiedBy)
                    </dd>
                    <dt class="col-sm-2">
                        Ngày cập nhật: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Convert.ToDateTime(Model.ModifiedDate).ToString("dd/MM/yyyy"))
                    </dd>
                </dl>
                <button type="button" class="btn btn-primary">
                    <a class="fa fa-edit"></a> &nbsp;
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.Oid})
                </button>
                <button type="button" class="btn btn-warning">
                    <a class="fa fa-th-list"></a> &nbsp;
                    @Html.ActionLink("Danh sách", "Index")
                </button>
            </div>
        </div>
    </div>
</div>