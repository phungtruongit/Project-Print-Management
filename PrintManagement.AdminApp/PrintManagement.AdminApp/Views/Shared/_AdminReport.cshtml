<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>GreenPrint HT - @ViewData["Title"]</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.4 -->
    <link href="~/template/Admin/LTE/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/template/Admin/LTE/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- iCheck -->
    <link href="~/template/Admin/LTE/plugins/iCheck/square/blue.css" rel="stylesheet" type="text/css" />
    <!-- DevExpress -->
    <link rel="stylesheet" href="~/css/thirdparty.bundle.css" />
    <script src="~/js/thirdparty.bundle.js"></script>
    <link rel="stylesheet" href="~/css/viewer.part.bundle.css" />
    <script src="~/js/viewer.part.bundle.js"></script>
</head>
<body class="login-page" style="background-image: url(/template/Admin/Images/background.png); background-repeat:repeat-x repeat-y">
    <div class="login-box" style="box-shadow: 0px 0px 30px grey; width:1000px">
        <div class="login-box-body">
            <h3><i class="fa fa-hand-o-right"></i><b style="color:darkgreen">&nbsp;@RenderSection("header", required: false)</b></h3>
            <br />
            @RenderBody()
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src="~/template/Admin/LTE/plugins/jQuery/jQuery-2.1.4.min.js" type="text/javascript"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="~/template/Admin/LTE/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- iCheck -->
    <script src="~/template/Admin/LTE/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>