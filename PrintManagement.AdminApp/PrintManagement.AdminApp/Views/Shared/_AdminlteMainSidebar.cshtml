@using System.Security.Claims
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/template/Admin/Images/avatar.png" class="img-circle" alt="User Image" />
            </div>
            <div class="pull-left info">
                <p>@User.Claims.FirstOrDefault()?.Value</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search..." />
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">&nbsp;</li>
            <li class="treeview">
                <a href="/Home/Index">
                    <i class="fa fa-dashboard"></i> <span>Tổng quan</span> <i class="fa fa-caret-right pull-right"></i>
                </a>
            </li>
            @*<li class="treeview">
                <a href="/Account/Index">
                    <i class="fa fa-key"></i> <span>Tài khoản</span> <i class="fa fa-caret-right pull-right"></i>
                </a>
            </li>*@
            @if(User.Claims.Any(x => x.Type.Equals(ClaimTypes.Role) && x.Value.Equals("Admin"))) {
            <li class="treeview">
                <a href="/User/Index">
                    <i class="fa fa-user"></i> <span>Người dùng</span> <i class="fa fa-caret-right pull-right"></i>
                </a>
            </li>
            <li class="treeview">
                <a href="/Department/Index">
                    <i class="fa fa-hospital-o"></i> <span>Phòng ban</span> <i class="fa fa-caret-right pull-right"></i>
                </a>
            </li>
            <li class="treeview">
                <a href="/Printer/Index">
                    <i class="fa fa-print"></i> <span>Thiết bị in ấn</span> <i class="fa fa-caret-right pull-right"></i>
                </a>
            </li>
            }
            <li class="treeview">
                <a href="/Document/Index">
                    <i class="fa fa-files-o"></i> <span>Kho tài liệu</span> <i class="fa fa-caret-right pull-right"></i>
                </a>
            </li>
            @if(User.Claims.Any(x => x.Type.Equals(ClaimTypes.Role) && x.Value.Equals("Admin"))) {
            <li class="treeview">
                <a href="/ReportStatistic/Index">
                    <i class="fa fa-bar-chart"></i> <span>Báo cáo thống kê</span> <i class="fa fa-caret-right pull-right"></i>
                </a>
            </li>
            <li class="treeview">
                <a href="/Options/Index">
                    <i class="fa fa-gear"></i> <span>Tuỳ chọn</span> <i class="fa fa-caret-right pull-right"></i>
                </a>
            </li>
            }
            <li class="treeview">
                <a href="/PrintUsageLog/Index">
                    <i class="fa fa-pencil-square-o"></i> <span>Nhật ký</span> <i class="fa fa-caret-right pull-right"></i>
                </a>
            </li>
            <li class="treeview">
                <a href="/About/Index">
                    <i class="fa fa-info-circle"></i> <span>Thông tin</span> <i class="fa fa-caret-right pull-right"></i>
                </a>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>