@model RegisterRequest

@{
    ViewData["Title"] = "Phòng ban";
}

@section header
{
    Phòng ban - Thêm mới phòng ban
}

<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-body">
            <div class="col-md-4">
