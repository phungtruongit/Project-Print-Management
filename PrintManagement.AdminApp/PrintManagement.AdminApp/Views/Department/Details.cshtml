@model PrintManagement.ApiIntegration.DepartmentDTO

@{
    ViewData["Title"] = "Phòng ban";
}

@section header
{
    Phòng ban - Chi tiết phòng ban (#@Model.Name)
}

<div class="container-fluid">
    <div class="card mb-4">
        <div class="card-body">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        Tên phòng ban:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    @*<dt class="col-sm-2">
                        Ghi chú:
                        </dt>
                        <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Note)
                        </dd>*@
                    <dt class="col-sm-2">
                        Người tạo:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedBy)
                    </dd>
                    <dt class="col-sm-2">
                        Ngày tạo:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Convert.ToDateTime(Model.CreatedDate).ToString("dd/MM/yyyy"))
                    </dd>
                    <dt class="col-sm-2">
                        Người cập nhật:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ModifiedBy)
                    </dd>
                    <dt class="col-sm-2">
                        Ngày cập nhật:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Convert.ToDateTime(Model.ModifiedDate).ToString("dd/MM/yyyy"))
                    </dd>
                </dl>
                <button type="button" class="btn btn-primary">
                    <a class="fa fa-edit"></a> &nbsp;
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.Oid})
                </button>
                <button type="button" class="btn btn-warning">
                    <a class="fa fa-th-list"></a> &nbsp;
                    @Html.ActionLink("Danh sách", "Index")
                </button>
            </div>
        </div>
    </div>
</div>